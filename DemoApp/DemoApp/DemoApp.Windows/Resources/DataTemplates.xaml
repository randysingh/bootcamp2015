<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:DemoApp.Windows.Views"
    >
    
    <views:BoolToVisConverter x:Key="boolToVisConverter" />
    <views:BoolNotToVisConverter x:Key="boolNotToVisConverter" />

    <DataTemplate x:Key="JobTemplate">
        <Button Command="{Binding Select}">
            <Border BorderThickness="2" BorderBrush="Red">
                <StackPanel>
                    <TextBlock>
                    <Run>Position: </Run>
                    <Run Text="{Binding Job.Title}" />
                    </TextBlock>
                    <TextBlock>
                    <Run>Organization: </Run>
                    <Run Text="{Binding Job.Organization}" />
                    </TextBlock>
                    <TextBlock>
                    <Run>Salary: $</Run>
                    <Run Text="{Binding Job.MinSalary}" />
                    <Run>-$</Run>
                    <Run Text="{Binding Job.MaxSalary}" />
                    </TextBlock>
                </StackPanel>
            </Border>
        </Button>
    </DataTemplate>
    
</ResourceDictionary>
